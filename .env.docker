# ====================================
# Variables de Entorno - Docker
# ====================================
# Copia este archivo a .env y ajusta los valores

# Configuración de Docker Hub
DOCKER_USERNAME=tu-usuario-dockerhub
DOCKER_PASSWORD=tu-password-o-token

# Configuración de la aplicación
NODE_ENV=production
BUILD_CONFIGURATION=production

# URLs del Backend (ajustar según tu infraestructura)
API_GATEWAY_URL=https://api.innoad.com/api
API_AUTH_URL=https://api.innoad.com/api/auth
API_WEBSOCKET_URL=wss://api.innoad.com/ws

# Puerto de exposición
FRONTEND_PORT=80

# Configuración de Nginx
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Configuración de cache
CACHE_CONTROL_MAX_AGE=31536000

# Monitoreo y logs
ENABLE_MONITORING=true
LOG_LEVEL=warn

# Cloudinary (si aplica)
CLOUDINARY_CLOUD_NAME=innoad-cloud
CLOUDINARY_UPLOAD_PRESET=innoad-uploads-prod

# Mapbox (si aplica)
MAPBOX_ACCESS_TOKEN=tu-token-aqui

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# ====================================
# Configuración de Docker Compose
# ====================================
COMPOSE_PROJECT_NAME=innoad
COMPOSE_FILE=docker-compose.yml
