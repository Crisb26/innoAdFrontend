# ====================================
# Variables de Entorno - Docker
# ====================================
# Copia este archivo a .env y ajusta los valores

# Configuración de Docker Hub


# Configuración de la aplicación
NODE_ENV=development
BUILD_CONFIGURATION=development

# URLs del Backend (ajustar según tu infraestructura)
API_GATEWAY_URL=http://localhost:8000/api
API_AUTH_URL=http://localhost:8000/api/auth
API_WEBSOCKET_URL=ws://localhost:8000/ws

# Puerto de exposición
FRONTEND_PORT=http://localhost:3000

# Configuración de Nginx
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Configuración de cache
CACHE_CONTROL_MAX_AGE=31536000

# Monitoreo y logs
ENABLE_MONITORING=true
LOG_LEVEL=warn

# Cloudinary (si aplica)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_UPLOAD_PRESET=

# Mapbox (si aplica)
MAPBOX_ACCESS_TOKEN=

# Analytics
GOOGLE_ANALYTICS_ID=

# ====================================
# Configuración de Docker Compose
# ====================================
COMPOSE_PROJECT_NAME=innoad
COMPOSE_FILE=docker-compose.yml
