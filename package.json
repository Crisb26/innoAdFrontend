{
  "name": "innoad-frontend",
  "version": "2.0.0",
  "description": "Sistema de Gesti√≥n de Publicidad Digital - InnoAd",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open --proxy-config proxy.conf.json",
    "iniciar": "ng serve --open",
    "iniciar:proxy": "ng serve --open --proxy-config proxy.conf.json",
    "construir": "ng build --configuration production",
    "construir:compose": "ng build --configuration compose",
    "observar": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "servir-produccion": "npm run construir && http-server -p 8080 -c-1 dist/innoad-frontend/browser",
    "servir-http": "http-server dist/innoad-frontend/browser --port 80 --gzip --brotli --cors -c-1",
    "analizar": "ng build --configuration production --stats-json && webpack-bundle-analyzer dist/innoad-frontend/browser/stats.json",
    "docker:build": "docker build -t innoad-frontend:latest .",
    "docker:build:compose": "docker build --build-arg BUILD_CONFIGURATION=compose -t innoad-frontend:compose .",
    "docker:build:prod": "docker build --build-arg BUILD_CONFIGURATION=production -t innoad-frontend:prod .",
    "docker:run": "docker run -d -p 80:80 --name innoad-frontend innoad-frontend:latest",
    "docker:stop": "docker stop innoad-frontend && docker rm innoad-frontend",
    "docker:restart": "npm run docker:stop && npm run docker:run",
    "docker:logs": "docker logs -f innoad-frontend",
    "docker:shell": "docker exec -it innoad-frontend sh",
    "docker:clean": "docker system prune -f",
    "docker:size": "docker images innoad-frontend",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f",
    "compose:restart": "docker-compose restart",
    "compose:rebuild": "docker-compose up -d --build",
    "deploy:netlify": "netlify deploy --prod --dir=dist/innoad-frontend/browser",
    "deploy:preview": "netlify deploy --dir=dist/innoad-frontend/browser"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/cdk": "^18.2.14",
    "@angular/common": "^18.2.14",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.14",
    "@angular/forms": "^18.2.14",
    "@angular/platform-browser": "^18.2.14",
    "@angular/platform-browser-dynamic": "^18.2.14",
    "@angular/router": "^18.2.14",
    "@ng-bootstrap/ng-bootstrap": "^17.0.0",
    "@ngrx/effects": "^18.0.0",
    "@ngrx/store": "^18.0.0",
    "bootstrap": "^5.3.2",
    "chart.js": "^4.4.0",
    "leaflet": "^1.9.4",
    "luxon": "^3.4.4",
    "ng2-charts": "^6.0.1",
    "notifyx": "^3.0.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "^0.14.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.21",
    "@angular/cli": "^18.2.0",
    "@angular/compiler-cli": "^18.2.0",
    "@types/leaflet": "^1.9.8",
    "@types/luxon": "^3.4.2",
    "http-server": "^14.1.1",
    "typescript": "~5.5.4"
  }
}
